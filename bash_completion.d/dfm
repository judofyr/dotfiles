_dfm() {
  local cur=${COMP_WORDS[COMP_CWORD]}
  local prev=${COMP_WORDS[COMP_CWORD-1]}
  local words

  case "$prev" in
    edit|link|add)
      words=`dfm ls`
      ;;
    rm)
      words=`dfm linked`
      ;;
  esac

  if [[ "$COMP_CWORD" -eq 1 ]]; then
    words=`dfm commands`
  fi

  COMPREPLY=( $(compgen -W "$words" -- $cur) )
}
complete -F _dfm dfm

