alias gs="git status"
alias gd="git diff"
alias gc="git commit"
alias gl="git log"
alias t="tmux attach-session -t"

VIM="${VIM:-vim}"

function vim() {
  if [ -d "$1" ]; then
    local dir=$(printf %q "$1")
    command $VIM --cmd ":cd $dir" "$@"
  else
    command $VIM "$@"
  fi
}

alias e="vim"
alias vi="vim"

for file in $HOME/.bash_completion.d/*; do
  test -f "$file" && . "$file"
done

